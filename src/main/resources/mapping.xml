<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<class name="com.ogbrown.devcourses.model.School">
		<map-to xml="school" />
		<field name="courses" type="com.ogbrown.devcourses.model.Course" collection="arraylist">
				<bind-xml name="courses" node="element" />
		</field>

	</class>
	<class name="com.ogbrown.devcourses.model.Course">

		<map-to xml="course" />
		<field name="id" type="java.lang.Long">
		</field>

		<field name="courseLabel" type="string">
			<bind-xml name="course-label" node="element" />
		</field>

		<field name="title" type="string">
			<bind-xml name="title" node="element" />
		</field>
		<field name="shortTitle" type="string">
		    <bind-xml name="short-title" node="element" />
		</field>
		<field name="urlSlug" type="string">
		    <bind-xml name="url-slug" node="element" />
		</field>
		<field name="numberOfSessions" type="java.lang.Short">
		    <bind-xml name="num-of-sessions" node="element" />
		</field>
		<field name="courseOfferings" type="com.ogbrown.devcourses.model.CourseOffering" collection="arraylist"  >
            <bind-xml name="course-offerings" node="element" />
       </field>


	</class>
</mapping>
